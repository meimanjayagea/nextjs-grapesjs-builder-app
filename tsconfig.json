{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "components/*": ["components/*"],
      "lib/*": ["lib/*"],
      "types/*": ["types/*"],
      "public/*":["public/*"],
      "utils/*":["utils/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/**/*.ts",
    "**/**/*.tsx",
    "next.config.mjs",
    "global.d.ts",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
